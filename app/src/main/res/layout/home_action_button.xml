<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/NewRequest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/back_circle_accent_bleft_tleft"
        >

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:src="@drawable/ic_touch_app"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/ML_White"
            android:textSize="@dimen/_10sdp"
            android:maxLines="2"
            fontPath="font/iransans_web_medium.ttf"
            android:gravity="center"
            android:text="@string/NewRequest"
            android:layout_marginRight="@dimen/_2sdp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ResultRequest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/back_circle_accent_bright_tright"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/ML_White"
            android:textSize="@dimen/_10sdp"
            android:maxLines="2"
            fontPath="font/iransans_web_medium.ttf"
            android:gravity="center"
            android:text="@string/ResultRequest"
            android:layout_marginLeft="@dimen/_2sdp"
            />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_av_timer"
            />

    </LinearLayout>


</LinearLayout>