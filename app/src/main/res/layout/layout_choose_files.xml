<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutChooseDoc"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_insert_drive_file"
                android:tint="@color/ML_PrimaryDark"
                android:background="@drawable/home_back_circle_border_accent_tleft_right"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/back_circle_accent_bleft_bright"
                android:text="@string/ChooseFile"
                android:textColor="@color/ML_White"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                fontPath="font/iransans_web_medium.ttf"
                android:paddingBottom="@dimen/_10sdp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutChooseImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_image"
                android:tint="@color/ML_PrimaryDark"
                android:background="@drawable/home_back_circle_border_accent_tleft_right"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/back_circle_accent_bleft_bright"
                android:text="@string/ChooseImage"
                android:textColor="@color/ML_White"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                fontPath="font/iransans_web_medium.ttf"
                android:paddingBottom="@dimen/_10sdp"
                />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        >

        <LinearLayout
            android:id="@+id/layoutChooseVideo"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_videocam"
                android:tint="@color/ML_PrimaryDark"
                android:background="@drawable/home_back_circle_border_accent_tleft_right"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/back_circle_accent_bleft_bright"
                android:text="@string/ChooseVideo"
                android:textColor="@color/ML_White"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                fontPath="font/iransans_web_medium.ttf"
                android:paddingBottom="@dimen/_10sdp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_mic"
                android:tint="@color/ML_PrimaryDark"
                android:background="@drawable/home_back_circle_border_accent_tleft_right"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/back_circle_accent_bleft_bright"
                android:text="@string/RecordVoice"
                android:textColor="@color/ML_White"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                fontPath="font/iransans_web_medium.ttf"
                android:paddingBottom="@dimen/_10sdp"
                />


        </LinearLayout>

    </LinearLayout>





    <Button
        android:id="@+id/ButtonClose"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/button_bg"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/Ignore"
        fontPath="font/iransans_web_medium.ttf"
        android:textColor="@color/ML_White"
        />

</LinearLayout>